@model SignIn
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.css" crossorigin="anonymous">
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
    
        $(document).ready(function(){
           $("button").click(function(){
            var username=$(document).find("input").eq(0).val();
                    sessionStorage.setItem("UserName",username);
                    
                });
        })
        
    </script>
    <style type="text/css">
        button[type="submit"]:enabled{
            background-color: #CF93D9;border-color: #CF93D9;
            box-shadow:none;
        }

        input[type="text"]:enabled{
            box-shadow:none;
            border-color:#15324E;
        }
        input[type="password"]:enabled{
            box-shadow:none;
            border-color:#15324E;
        }
    </style>
    <title>LogIn</title>
</head>
<body style="margin: 0px">
    <form method="post">
    <div style="float: left;width: 507px;height: 665px;background-color: #15324E;">
        <div style="margin-top: 36%;width: 438px;margin-left: 7%;height: 401px;">
            <div class="row" style="border-bottom: 3.5px solid white;">
                <div class="col-lg-2" style="">
                    <img src="http://localhost/BookShop/WebsiteLogo/p3.png" width="60" style="width: 123px;margin-left: 76px;margin-top: -4px;">
                </div>
                <div class="col-lg-10" style="">
                    <h1 style="color: white;text-align: center;margin-left: 93px;margin-top: 31px;/* padding-top: 59px; */margin-right: 56px;/* font-size: 32px; */">Book Stor</h1>
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-lg-12" style="text-align: center;">
                    <h2 style="color: white;font-size: 21px;margin-right: 6px;">For All The Books and The Best Authors Around The World</h2>
                </div>
            </div>


        </div>
    </div>
    <div style="height: 665px;background-color: #EDF1F5;/* margin-bottom: 94px; *//* padding-bottom: 81px; */">
        <div style="height: 386px;width: 413px;float: right;margin-top: 100px;margin-right: 181px;background-color: white;">
            <div class="container">
                <div class="row" style="text-align: center;color: darkgray;margin-top: 50px;">
                    <div class="col-lg-12">
                        <span style="font-size: 25px;">Welcome To Book Stor</span>
                    </div>
                </div>
                <div class="row" style="margin-top: 112px;">
                    <div class="col-lg-12">
                        <input type="text" style="border-color: #15324E;" placeholder="UserName" asp-for="UserName" class="form-control">
                    </div>
                </div>
                <div class="row" style="margin-top: 8px;">
                    <div class="col-lg-12">
                        <input type="password" style="border-color: #15324E;" placeholder="Password" asp-for="Password" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5" style="float: left;">
                        <input type="checkbox" style="margin-left: 6px;" asp-for="RemeberMe">
                        Remember Me
                    </div>
                    <div class="col-lg-7" style="text-align: end;/* margin-right: 26px; */">
                        <a style="color: #CF93D9;">Forget Password?</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8" style="margin-top: 32px;margin-left: 81px;">
                        <button type="submit" asp-action="SignIn" style="background-color: #CF93D9;border-color: #CF93D9;" class="form-control btn btn-primary">

                            SingIn
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </form>
</body>
</html>
